set terminal png

# The data runs from dimension 40 to 145
# It shows the orthogonality defect and hermite factor for an average omega.

set output "hermiteFactor.png"
set title  "Hermite Factors on prime HNF 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Hermite Factor"

plot "jacobiReductionData.txt" using 1:3 smooth bezier title "Jacobi after LLL, randomized omega", \
"lllReductionData.txt" using 1:3 smooth bezier title "LLL(0.99)"

# Drawing orthogonality defect over omega

set output "defect.png"
set title  "Orthogonality defect on prime HNF 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Orthogonality defect"

plot "jacobiReductionData.txt" using 1:2 smooth bezier title "Jacobi after LLL, randomized omega", \
"lllReductionData.txt" using 1:2 smooth bezier title "LLL(0.99)"


set output "hermiteFactor-logscale.png"
set title  "Hermite Factors on prime HNF 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Hermite Factor (logscale)"
set logscale y

plot "jacobiReductionData.txt" using 1:3 smooth bezier title "Jacobi after LLL, randomized omega", \
"lllReductionData.txt" using 1:3 smooth bezier title "LLL(0.99)"

# Drawing orthogonality defect over omega

set output "defect-logscale.png"
set title  "Orthogonality defect on prime HNF 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Orthogonality defect (logscale)"
set logscale y

plot "jacobiReductionData.txt" using 1:2 smooth bezier title "Jacobi after LLL, randomized omega", \
"lllReductionData.txt" using 1:2 smooth bezier title "LLL(0.99)"

