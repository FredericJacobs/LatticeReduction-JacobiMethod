set terminal png

# Drawing Hermite over Omega

set output "hermiteOverFactor.png"
set title  "Hermite Factors on random 10-bits matrices, dimension 100"
set xlabel "Omega"
set ylabel "Hermite Factor"


plot "jacobiReductionData copy.txt" using 1:2 smooth bezier title "Jacobi" with linespoints, \
"lllReductionData.txt.txt" using 1:2 smooth bezier title "LLL(0.99)"

# Drawing orthogonality defect over omega

set output "defect.png"
set title  "Orthogonality Defect on random 10-bits matrices, dimension 100"
set xlabel "Omega"
set ylabel "Orthogonality Defect"


plot "jacobiReductionData copy.txt" using 1:3 smooth bezier title "Jacobi" with linespoints, \
"lllReductionData.txt.txt" using 1:3 smooth bezier title "LLL(0.99)"

# Drawing running time over matrix dimensions

set output "runningTime.png"
set title  "Running time on random 10-bits matrices"
set xlabel "Omega"
set ylabel "Running time"

plot "jacobiReductionData copy.txt" using 1:4 smooth bezier title "Jacobi" with linespoints, \
"lllReductionData.txt.txt" using 1:4 smooth bezier title "LLL(0.99)"

# Drawing number of loops

set output "loops.png"
set title  "Number of Jacobi loops, dimension 100"
set xlabel "Omega"
set ylabel "Running time"

plot "jacobiReductionData copy.txt" using 1:4 smooth bezier title "Jacobi"