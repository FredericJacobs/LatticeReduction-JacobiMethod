set terminal png

# Drawing HNF over matrix dimensions

set output "hermite.png"
set title  "Hermite Factors on random 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Hermite Factor"


plot "dataHermiteRandomMatrix_Jacobi.txt" using 1:2 smooth bezier title "Jacobi(0.6)", \
"dataHermiteRandomMatrix_LLL.txt" using 1:2 smooth bezier title "LLL(0.99)"

# Drawing orthogonality defect over matrix dimensions

set output "defect.png"
set title  "Orthogonality Defect on random 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Orthogonality Defect"


plot "dataHermiteRandomMatrix_Jacobi.txt" using 1:3 smooth bezier title "Jacobi(0.6)", \
"dataHermiteRandomMatrix_LLL.txt" using 1:3 smooth bezier title "LLL(0.99)"

# Drawing running time over matrix dimensions

set output "runningTime.png"
set title  "Running time on random 10-bits matrices"
set xlabel "Dimensions"
set ylabel "Running time"

plot "dataHermiteRandomMatrix_Jacobi.txt" using 1:4 smooth bezier title "Jacobi(0.6)", \
"dataHermiteRandomMatrix_LLL.txt" using 1:4 smooth bezier title "LLL(0.99)"
